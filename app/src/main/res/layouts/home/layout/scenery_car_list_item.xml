<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp">
        <com.example.iyou.my.activity.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/scenery_place_icon"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="New Texzt"
                android:layout_gravity="center_vertical"
                android:id="@+id/scenery_name"
                android:textColor="@color/colorBaseYellow"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:id="@+id/scenery_delete_btn"
                android:src="@android:drawable/ic_menu_delete"
                android:background="#00000000"/>
        </LinearLayout>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/itemArrow"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="left"/>
</LinearLayout>



</LinearLayout>